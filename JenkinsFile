pipeline {
    agent any

    stages {
        stage('Read File From Workspace') {
            steps {
                sh 'pwd'
                sh 'ls -log'
            }
        }
        stage('check if File Exist'){
            steps{
                script{
                    def data = pwd();
                    def directoryName = data + '/src/main/resources';
                    def dir = new File (directoryName)
                     def fileData = [];
                     dir.traverse(type: ANY, maxDepth: 2) {
                         files.add(it)
                     };
                     print(files)
                }
            }
        }
    }
}
